<Window x:Class="FlyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlyApp"
        mc:Ignorable="d"
        Title="FlyApp" Height="450" Width="800">
    <Canvas Name="MyCanvas">
        <Label Name="score" Content="Score: 0" Height="50" FontSize="25"/>
        <Label Name="info" Width="400" Height="250" FontSize="150" Content="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Canvas.Left="200" Canvas.Top="100"/>
        <Button Name="fly" Click="fly_Click" Width="50" Height="50" Background="Gray" Canvas.Top="-50" Canvas.Left="-50"/>
    </Canvas>
</Window>
